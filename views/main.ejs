          <div class="col-md-1 col-md-offset-1 top  main">
            <div class="borr">
              <div class="ffff">
                <span class="glyphicon glyphicon-comment"></span>
              </div> <!-- page-header -->
            </div>
          </div>
          <div class="col-md-1 top main">
            <div class="borr">
              <div class="ffff">
                <span class="glyphicon glyphicon-stats"></span>
              </div> <!-- page-header -->
            </div>
          </div>

      </div> <!-- row -->


<!-- news part -->
<!-- ================================================= -->
      <div class="row top">
        <div class="col-md-8 ">
          <div class="col-md-8 col-md-offset-1 ">
            <div class="table-responsive top">
                <table class="table ">
                    <tbody>

                      <% for (var i=0;i<(POST.length);i++) {%>

                        <tr>
                          <td> <span class="glyphicon glyphicon-hand-right"></span></td>
                            <td class="fontt">
                              <%= POST[i].bbs %> 
                            </td>
                              <% if (POST[i].ip==undefined) { %>
                                <td class="fontt yellow">發
                                </td>
                              <% } else {%>    
                                <% if (POST[i].res[0]==1) { %>
                                  <td class="fontt yellow">推
                                  </td>
                                <% } else if (POST[i].res[1]==1) { %>
                                  <td class="fontt red">噓
                                  </td>
                                <%  } else if (POST[i].res[2]==1) { %>
                                  <td class="fontt red">→
                                  </td>
                                <% } %>
                              <% } %>
                            <td class="">
                                <div class="fonttt text-left">
                                  <a class="various fancybox.iframe" href="
                                  <%= POST[i].url %>
                                  ">
                                  <%= POST[i].title %>
                                  </a></div>
                                <div class="grey text-left">
                                  <cite>
                                    <%= POST[i].time %>
                                  </cite>
                                </div>
                            </td>
                        </tr>

                      <% } %>
                    </tbody>
                    
                </table>
              </div>  <!-- table -->
            </div> <!-- col-md-12 table data container -->
          </div> <!-- col-md-8 table container-->
        </div> <!-- row -->
      </div>  <!-- bb background -->
    </div> <!-- container-fluid -->
